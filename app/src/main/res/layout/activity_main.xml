<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:padding="10dp"
android:background="@color/white"
tools:context=".MainActivity">

    <androidx.gridlayout.widget.GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/baka"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_columnWeight="1"
            app:layout_row="0"
            app:layout_rowWeight="1"
            app:layout_column="0"
            app:layout_gravity="fill"
            android:onClick="buttonTapped"
            android:text="Baka"/>

        <Button
            android:id="@+id/ekeseplosion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            app:layout_columnWeight="1"
            app:layout_row="0"
            app:layout_rowWeight="1"
            app:layout_column="1"
            app:layout_gravity="fill"
            android:onClick="buttonTapped"
            android:text="Ekeseplosion"/>

        <Button
            android:id="@+id/hahahahahha"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_columnWeight="1"
            app:layout_row="1"
            app:layout_rowWeight="1"
            app:layout_column="0"
            app:layout_gravity="fill"
            android:onClick="buttonTapped"
            android:text="hahaha"/>

        <Button
            android:id="@+id/nani"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nani"
            android:layout_marginStart="10dp"
            app:layout_columnWeight="1"
            app:layout_row="1"
            app:layout_rowWeight="1"
            app:layout_column="1"
            app:layout_gravity="fill"
            android:onClick="buttonTapped" />

        <Button
            android:id="@+id/nikoniko"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_columnWeight="1"
            app:layout_row="2"
            app:layout_rowWeight="1"
            app:layout_column="0"
            app:layout_gravity="fill"
            android:onClick="buttonTapped"
            android:text="Niko"/>

        <Button
            android:id="@+id/oraora"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            app:layout_columnWeight="1"
            app:layout_row="2"
            app:layout_rowWeight="1"
            app:layout_column="1"
            app:layout_gravity="fill"
            android:onClick="buttonTapped"
            android:text="ORAAA"/>

        <Button
            android:id="@+id/suskete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_columnWeight="1"
            app:layout_row="3"
            app:layout_rowWeight="1"
            app:layout_column="0"
            app:layout_gravity="fill"
            android:onClick="buttonTapped"
            android:text="Suskete"/>

        <Button
            android:id="@+id/wow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            app:layout_columnWeight="1"
            app:layout_row="3"
            app:layout_rowWeight="1"
            app:layout_column="1"
            app:layout_gravity="fill"
            android:onClick="buttonTapped"
            android:text="Wow"/>

    </androidx.gridlayout.widget.GridLayout>
    </RelativeLayout>